@inherits Umbraco.Web.Mvc.UmbracoViewPage<CallToActionSection>
@using U8StarterKit.Web.Models.Umbraco
@using U8StarterKit.Web.Extensions


@SectionHelper.RenderSectionStart(Model.BackgroundColor.Label, true)
<div class="columns is-centered">
    <div class="column has-no-background is-two-thirds has-text-centered">
        @if (Model.Title.HasValue())
        {
            <h2 class="title is-size-3 is-size-1-tablet">@Model.Title</h2>
        }
        @if (Model.Content.HasValue())
        {
            <div class="subtitle is-size-5 is-size-4-tablet">@Model.Content</div>
        }
        @if (Model.Link.HasValue())
        {
            <a class="button is-link is-medium" target="@Model.Link.Target" href="@Model.Link.Url">
                @Model.Link.Name
            </a>
        }
    </div>
</div>
@SectionHelper.RenderSectionEnd()


